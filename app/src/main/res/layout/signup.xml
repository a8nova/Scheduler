<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800"
    >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:text="@string/email"
        android:layout_above="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwd"
        android:text="@string/password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goButton"
        android:id="@+id/submitButton"
        android:onClick="submitButtonPressed"
        android:layout_below="@+id/checkBox"
        android:layout_alignRight="@+id/passwd"
        android:layout_alignEnd="@+id/passwd"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="name"
        android:ems="10"
        android:id="@+id/name"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signupSupervisorCheckbox"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/passwd"
        android:layout_alignLeft="@+id/passwd"
        android:layout_alignStart="@+id/passwd"
        android:layout_marginTop="40dp"
        android:textSize="20dp" />

</RelativeLayout>